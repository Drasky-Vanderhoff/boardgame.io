{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "Mutation testing for the client-only React/core engine codebase.",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "vitest",
  "vitest": {
    "configFile": "vite.config.ts"
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "{src,lib}/**/!(*.+(s|S)pec|*.+(t|T)est).+(cjs|mjs|js|ts|mts|cts|jsx|tsx)",
    "!{src,lib}/**/*.test.+(cjs|mjs|js|ts|mts|cts|jsx|tsx)",
    "!{scripts,examples,integration,docs,packages,node_modules,benchmark,.github,.devcontainer}/*"
  ]
}
