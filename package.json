{
  "name": "boardgame.io",
  "version": "0.50.2",
  "description": "library for turn-based games",
  "repository": "https://github.com/boardgameio/boardgame.io",
  "scripts": {
    "build:types": "tsc --project tsconfig.build.json",
    "build": "bun run build:types && vite build",
    "build:watch": "bun run build:types && vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "node ./scripts/integration.js",
    "test:mutation": "stryker run --ignoreStatic",
    "ts": "tsc --project tsconfig.check.json --noEmit",
    "ts:watch": "tsc --project tsconfig.check.json --noEmit --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepublishOnly": "bun run clean",
    "proxydirs": "node scripts/proxy-dirs.js",
    "prepack": "run-s build proxydirs",
    "postpack": "bun run clean",
    "prettier": "prettier --write \"{integration,src,benchmark}/**/*.{ts,tsx,js,jsx,css,md}\"",
    "changelog": "node ./scripts/changelog.js",
    "clean": "node ./scripts/clean.js"
  },
  "sideEffects": false,
  "main": "dist/cjs/main.js",
  "module": "dist/esm/main.js",
  "types": "dist/types/src/types.d.ts",
  "files": [
    "src",
    "dist",
    "client",
    "core",
    "react",
    "ai",
    "plugins",
    "testing"
  ],
  "keywords": [
    "board games",
    "card games",
    "tabletop games",
    "game engine"
  ],
  "engines": {
    "node": ">=18.0",
    "bun": ">=1.0.0"
  },
  "author": "nicolodavis@gmail.com",
  "license": "MIT",
  "funding": [
    "https://github.com/boardgameio/boardgame.io?sponsor=1",
    {
      "type": "opencollective",
      "url": "https://opencollective.com/boardgameio"
    }
  ],
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^8.2.3",
    "@stryker-mutator/vitest-runner": "^8.2.3",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-unicorn": "^56.0.1",
    "jsdom": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shelljs": "^0.8.5",
    "tempy": "^3.1.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "nanoid": "^5.0.8",
    "prop-types": "^15.8.1",
    "redux": "^5.0.1",
    "rfc6902": "^5.1.2",
    "setimmediate": "^1.0.5",
    "ts-toolbelt": "^6.3.6"
  }
}
